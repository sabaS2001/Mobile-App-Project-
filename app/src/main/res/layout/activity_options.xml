<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EBCB"
    android:backgroundTint="#DDBF89"
    android:backgroundTintMode="multiply">

    <Button
        android:id="@+id/coffeebutton"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="351dp"
        android:fontFamily="sans-serif-black"
        android:text="COFFEE"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bagelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="268dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="365dp"
        android:fontFamily="sans-serif-black"
        android:text="BAGELS"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="161dp"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="112dp"
        android:src="@drawable/cake" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@drawable/background3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Espresso Lab "
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="97dp"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:src="@drawable/coffecup" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="238dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="400dp"
        android:src="@drawable/coffecup" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="146dp"
        android:layout_height="181dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="34dp"
        android:layout_toEndOf="@+id/imageView3"
        android:src="@drawable/bagels" />

    <Button
        android:id="@+id/cakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="118dp"
        android:fontFamily="sans-serif-black"
        android:text="CAKE"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/locationimageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="339dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/location"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/OrderButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-black"
        android:text="ORDER"
        android:textSize="25sp" />

</RelativeLayout>
