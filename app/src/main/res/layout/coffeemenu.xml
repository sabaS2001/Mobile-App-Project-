<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EBCB">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@drawable/background3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:text="COFFEE "
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewlogo"
            android:layout_width="97dp"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:src="@drawable/coffecup" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="417dp"
        android:layout_height="536dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/SpanishLatte"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="203dp"
            android:fontFamily="sans-serif-black"
            android:text="Spanish Latte --- 3.50"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Americano"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="257dp"
            android:fontFamily="sans-serif-black"
            android:text="Americano --- 1.50 "
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/VanillaLatte"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="317dp"
            android:fontFamily="sans-serif-black"
            android:text="Vanilla Latte --- 2.50"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/TurkishCoffee"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="147dp"
            android:fontFamily="sans-serif-black"
            android:text="Turkish Coffee -- .50"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ChocFrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/VanillaLatte"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Chocolate Frappacino -- 3.00"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="27dp"
            android:fontFamily="sans-serif-black"
            android:text="COFFEE ----- PRICE"
            android:textColor="#000000"
            android:textSize="30sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>